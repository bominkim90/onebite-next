{
  // 저장 시 포맷 + ESLint 자동 고치기
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // 워크스페이스에 있는 두 패키지를 ESLint가 각각 인식하도록
  "eslint.workingDirectories": [
    { "directory": "onebite-books-server-main", "changeProcessCWD": true },
    { "directory": "onebite-next-front", "changeProcessCWD": true }
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // 워크스페이스 TypeScript 사용(권장)
  "typescript.tsdk": "onebite-next-front/node_modules/typescript/lib"
}
